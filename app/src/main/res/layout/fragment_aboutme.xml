<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:text="Basic Info:"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Software Development Engineer with 4+ YOE in Software Development and Design."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_200"
                android:text="ِAbout me:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="20dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:text="Software Development Engineer with experience in C/C++, Java, Python, JavaScript, Data Structures and Algorithms, Web Development, Real-time applications, Socket Programming, Video Streaming Protocols, Concurrency, Multithreading, Parallel Programming, Distributed Systems, Object Oriented Analysis, and Design, Design Patterns, Project Lead, Project Management, AWS, Cloud Computing, Message Brokering Systems, Big Data Technologies, and Malware Static/Dynamic Analysis."/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>